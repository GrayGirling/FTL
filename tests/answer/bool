> # Make sure the bool values exist
> eval TRUE
TRUE
> eval FALSE
FALSE
> 
> TRUE {echo "prints"!}           # returns FALSE (NULL returned by body)
prints
> FALSE {echo "doesn't print"!}   # returns FALSE
FALSE
> 
> TRUE {echo "prints"!;TRUE}! {echo "prints again"!}       # returns TRUE
prints
prints again
> TRUE {echo "prints"!;FALSE}! {echo "doesn't print"!}     # returns FALSE
prints
FALSE
> FALSE {echo "doesn't print"!; TRUE}! {echo "doesn't print"!}   # returns FALSE [A[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[KE
FALSE
> FALSE {echo "doesn't print"!; FALSE}! {echo "doesn't print"!}  # returns FALSE [A[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[C[KE
FALSE
> 
> invert TRUE
FALSE
> invert FALSE
TRUE
> 
> equal TRUE TRUE
TRUE
> equal TRUE FALSE
FALSE
> equal FALSE TRUE
FALSE
> equal FALSE FALSE
TRUE
> 
> # same thing using pre-defined operator
> eval TRUE == TRUE
TRUE
> eval TRUE == FALSE
FALSE
> eval FALSE == TRUE
FALSE
> eval FALSE == FALSE
TRUE
> 
> set ifeval[bool]:{ if bool {"if-TRUE"} {"if-FALSE"}! }
> ifeval TRUE
"if-TRUE"
> ifeval FALSE
"if-FALSE"
